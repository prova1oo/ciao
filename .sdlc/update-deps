#!/usr/bin/env bash

set -e

tool_source="${BASH_SOURCE[0]}"
while [ -h "$tool_source" ] ; do tool_source="$(readlink "$tool_source")"; done
sdlc_dir="$( cd -P "$( dirname "$tool_source" )" && pwd )"
prj_home="$( cd -P "$( dirname "$sdlc_dir" )" && pwd )"

cd "${prj_home}"

hash mvn 2>/dev/null || {
  echo 'No Maven executable: aborting'
  exit 1
}

# Update dependencies
mvn -U org.openrewrite.maven:rewrite-maven-plugin:6.16.1:run \
    -Drewrite.activeRecipes=org.openrewrite.maven.UpgradeDependencyVersion \
    -Drewrite.options='newVersion=latest.release,groupId=*,artifactId=*'

# Update plugins
mvn -U org.openrewrite.maven:rewrite-maven-plugin:6.16.1:run \
    -Drewrite.activeRecipes=org.openrewrite.maven.UpgradePluginVersion \
    -Drewrite.options='newVersion=latest.release,groupId=*,artifactId=*,addVersionIfMissing=false'
